# Never bake secrets into the image
.env
.env.local
.env.*.local

# Logs - containers should log to stdout/stderr
logs
*.log
npm-debug.log*

# Development files
nodemon.json
.vscode
.idea

# Documentation
README.md
*.md

# Test files
test
*.test.js
__tests__

# OS files
.DS_Store
Thumbs.db

# Package manager files (except lock file)
package-lock.json is kept, but npm cache is ignored
.npm
.yarn
